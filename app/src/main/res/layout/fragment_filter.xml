<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/inset_dialog"
    android:minWidth="350dp"
    android:orientation="vertical"
    tools:context=".ui.list.filter.FilterFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:text="Тип животного"
        android:textColor="@color/colorAccentDark"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/check_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:buttonTint="@color/colorAccent"
        android:text="Кошки"
        android:textColor="@color/colorAccentDark"
        android:textSize="18sp"
        android:checked="true"/>

    <CheckBox
        android:id="@+id/check_dog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:buttonTint="@color/colorAccent"
        android:text="Собаки"
        android:textColor="@color/colorAccentDark"
        android:textSize="18sp"
        android:checked="true"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:text="Тип объявления"
        android:textColor="@color/colorAccentDark"
        android:textSize="24sp" />

    <CheckBox
        android:id="@+id/check_lost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:buttonTint="@color/colorAccent"
        android:text="Потерянные"
        android:textColor="@color/colorAccentDark"
        android:textSize="18sp"
        android:checked="true"/>

    <CheckBox
        android:id="@+id/check_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:buttonTint="@color/colorAccent"
        android:text="Найденные"
        android:textColor="@color/colorAccentDark"
        android:textSize="18sp"
        android:checked="true"/>

    <CheckBox
        android:id="@+id/check_good_hands"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:buttonTint="@color/colorAccent"
        android:text="В хорошие руки"
        android:textColor="@color/colorAccentDark"
        android:textSize="18sp"
        android:checked="true"/>

    <Button
        android:id="@+id/filter_done"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/background_button_positive"
        android:text="@string/done" />

</LinearLayout>